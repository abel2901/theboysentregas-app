<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <EditText
        android:id="@+id/edit_reset_email_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_edittext_rounded"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_button_rounded"
        android:text="@string/reset"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/edit_reset_email_password"
        app:layout_constraintStart_toStartOf="@+id/edit_reset_email_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_reset_email_password" />

    <TextView
        android:id="@+id/txt_reset_password_info"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:text="@string/reset_password_info"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btn_reset"
        app:layout_constraintStart_toStartOf="@+id/btn_reset"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_button_img_rounded"
        android:text="@string/back"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/txt_reset_password_info"
        app:layout_constraintStart_toStartOf="@+id/txt_reset_password_info"
        app:layout_constraintTop_toBottomOf="@+id/txt_reset_password_info" />

</androidx.constraintlayout.widget.ConstraintLayout>